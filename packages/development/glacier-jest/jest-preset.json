{
  "collectCoverage": true,
  "coverageDirectory": "<rootDir>/coverage",
  "coverageReporters": [
    "clover",
    "json",
    [
      "lcov",
      {
        "projectRoot": "../../../"
      }
    ],
    "text",
    "html"
  ],
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts"
  ],
  "transform": {
    "^.+\\.(t|j)sx?$": [
      "@swc/jest",
      {
        "jsc": {
          "parser": {
            "syntax": "typescript",
            "decorators": true
          },
          "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
          }
        }
      }
    ]
  }
}
